<%= render partial: "media/button_index" %>
<div class="media">
  <h1><%= @medium.Title %></h1>
  <div class="row medium">
    <div class="col-sm-4">
      <%= cl_image_tag(@medium.photo.path,crop: :fill, class: "picture_fullscreen") %>
    </div>
    <div class="col-sm-8">
      <p>Type: <%= @medium.Type %></p>
        <p>Style: <%= @medium.Style %></p>
        <p id="info_season" style="cursor:pointer;">Nombre de saison: <%= @medium.Season %></p>
        <p>Créateur: <%= @medium.Director %></p>
        <p>Synopsis: <%=@medium.description%></p>
    </div>
  </div>
</div>

<div id="Seasons">    
    <% seasons = Season.all %>
    <%- seasons.each do |season| -%>
        <% if season.Title_Media == @medium.Title %>
            <div class="col-sm-12 text-center Season">
                <h2>Saison <%= season.Season_Number %></h2>
                <p>Date de Sortie: <%= season.Date %></p>
                <p>Nombre d'épisode: <%= season.Episode %></p>
                <div class="Episodes text-left col-md-12">
                    <% episodes = Episode.all %>
                    <%- episodes.each do |episode| -%>
                        <% if episode.Season_Number == season.Season_Number %>
                            <div class="col-md-4">
                                <h3>Episode <%= episode.Episode_Number%></h3>
                                <h4><%= episode.Title_Episode %></h4>
                                <p>Sortie le : <%= episode.Date%></p>
                                <p>Description : <%= episode.Description %></p>  
                            </div>
                        <% end %>                
                    <% end %>
                </div>
            </div>
        <% end %>
    <% end %>    
</div>