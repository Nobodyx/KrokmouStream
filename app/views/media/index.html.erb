<div id="IndexTitle">
    <h1>KrokmouStream</h1>
    <p>Le meilleur pour l'organisation de vos s√©ries</p>
</div>

<div class="container encadrement-media">
    <% if ! user_signed_in? %>
        <% nb_media = @media.all.count 
        if nb_media > 4 %>
            <%- @media.each_with_index do |medium, pos| next if pos > 3 -%>   
                <div class="col-sm-6 col-md-3 encadrement-medium">            
                    <%= link_to(cl_image_tag(medium.photo.path, class: "picture"), medium_path(medium)) %>
                </div>
            <% end %>
        <% else %>
            <%- @media.each do |medium| -%>   
                <div class="col-sm-6 col-md-3 encadrement-medium">            
                    <%= link_to(cl_image_tag(medium.photo.path, class: "picture"), medium_path(medium)) %>
                </div>
            <% end %>
        <% end %>
    <% else %>
        <!-- AFFICHAGE DE MES SERIES -->
        <% indexMemberMedia %>
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <%- @member_media.each do |member_medium| -%>
                            <% if member_medium.user_id == current_user.id %>
                                    <div>         
                                        <div class="carousel-inner">
                                                                                  <!-- Wrapper for slides -->

                                            <%- @media.each do |medium| -%>
                                                    <% if medium.id == member_medium.medium_id && medium.style == "SERIE" %>
                                                            <!--
                                                            <h2 class="text-center"><%= medium.title %></h2>
                                                            <%= link_to(cl_image_tag(medium.photo.path, class: "picture"), member_medium_path(member_medium)) %>
                                                            <% if member_medium.current_episode != 0 %>
                                                                <p> Saison en cours : <%= member_medium.current_season %> </p>
                                                                <p> Episode en cours : <%= member_medium.current_episode %> </p>
                                                            <% end %>
                                                            -->

                                                            

                                                            <div class="item active"> 
                                                              <%= link_to(cl_image_tag(medium.photo.path, class: "picture"), member_medium_path(member_medium)) %>
                                                            </div>
                                                              


                                                    <% end %>
                                            <% end %>
                                        </div>
                                        

                                        <!-- Left and right controls -->
                                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                            
                                    </div>
                            <% end %>
                    <% end %>
                </div>

        <%- @media.each do |medium| -%>   
            <div class="col-sm-6 col-md-3 encadrement-medium">            
                <%= link_to(cl_image_tag(medium.photo.path, class: "picture"), medium_path(medium)) %>
            </div>
        <% end %>
    <% end %>
</div>



